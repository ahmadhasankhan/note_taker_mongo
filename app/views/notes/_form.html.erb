<%= form_for @note do |f| %>
    <% if @note.errors.any? %>
        <div id="error_explanation">
          <h2><i class="fa fa-flag fa-2x pull-left"></i> <%= pluralize(@note.errors.count, 'error') %> prohibited this
            template from being saved:</h2>
          <ul class="fa-ul">
            <% @note.errors.full_messages.each do |message| %>
                <li><i class="fa-li fa fa-star"></i> <%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :all_tags, class: "form-control", placeholder: "Tags separated with comma" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Back', notes_path, class: "btn btn-danger" %>
<% end %>