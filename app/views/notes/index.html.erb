<h1>Notes</h1>
<div class="well">
  <%= link_to "New Note", new_note_path, class: "btn btn-primary" %>
</div>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% if @notes.size == 0 %>
      <tr>
        <td colspan="6">No note found.</td>
      </tr>
  <% else %>
      <% @notes.each do |note| %>
          <tr>
            <td><%= note.title.truncate(60) %></td>
            <td><%= note.body.truncate(230) %></td>
            <td>
              <%= link_to 'Show', note_path(note), class: 'btn btn-default' %>
            </td>
            <td>
              <%= link_to 'Edit', edit_note_path(note), class: 'btn btn-default' %>
            </td>
            <td>
              <%= button_to 'Delete', note, method: :delete, data: { confirm: "Are you sure you wish to delete #{note.title} ?" }, class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<%= paginate @notes %>